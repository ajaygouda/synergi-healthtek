{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "orders"
    },
    "products": {
      "type": "component",
      "component": "components.order-item",
      "repeatable": true
    },
    "totalAmount": {
      "type": "integer",
      "required": false
    },
    "orderStatus": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "shipped",
        "cancelled"
      ]
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "unpaid",
        "paid",
        "refunded"
      ]
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "cod",
        "online",
        "upi"
      ]
    },
    "shippingAddress": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::address.address"
    }
  }
}
